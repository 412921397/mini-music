/* pages/detail-search/index.wxss */
page {
  padding: 0 20rpx;
  padding-top: 56px;
  position: relative;
}

/** 搜索框 */
.search {
  position: fixed;
  top: -1rpx;
  left: 19rpx;
  right: 20rpx;
  z-index: 999999;
}

/* 热门搜索 */
.hot {
  padding: 10rpx;
}

.hot .list {
  display: flex;
  flex-wrap: wrap;
}

.hot .tag {
  font-size: 26rpx;
  background-color: #fff;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.hot .tag:first-of-type {
  color: #26ce8a;
}

/* 建议搜索 */
.suggest {
  padding: 10rpx;
}

.suggest .title {
  color: #26ce8a;
  font-size: 34rpx;
  font-weight: 700;
}

.suggest .item {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.suggest .item .icon {
  width: 66rpx;
  margin-left: -20rpx;
}

.suggest .item .text {
  font-size: 28rpx;
}

/** 搜索结果 */
.result .title {
  font-size: 32rpx;
  color: #26ce8a;
}

/** */
.van-tabs__scroll {
  background-color: #fafafa !important;
}
.van-tabs__line {
  background-color: #26ce8a !important;
}
